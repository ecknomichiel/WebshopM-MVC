@model IEnumerable<WebshopM_MVC.Models.ShopItem>

<table class="table">
    <tr>
        <th>
            Product name
        </th>
        <th>
            Price (SEK)
        </th>
        <th>
            Shelf position
        </th>
        <th>
            Quantity in stock
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>
    <tfoot>
        <tr>
            
            <td>
                Total:
            </td>
            <td>
                @Model.Count()
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td>
            </td>
        </tr>
    </tfoot>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShelfPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArticleNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArticleNumber }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArticleNumber })
        </td>
    </tr>
}
    


</table>
