@model IEnumerable<WebshopM_MVC.Models.ShopItem>

<table class="table">
    <tr>
        <th>
            Article number
        </th>
        <th>
            Shelf position
        </th>
        <th>
            Quantity in stock
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ArticleNumber.ToString(), "Details", new { id = item.ArticleNumber })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <div class="btn btn-default">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ArticleNumber })    
                </div>
                <div class="btn btn-default">
                    @Html.ActionLink("Delete", "Delete", new { id = item.ArticleNumber })
                </div>
            </td>
        </tr>
    }

</table>

